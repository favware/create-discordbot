{
  "compilerOptions": {
    "outDir": "./dist/",
    "rootDir": "./lib",
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "lib": ["es2018"],
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "newLine": "lf",
    "noFallthroughCasesInSwitch": true,
    "noErrorTruncation": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "strict": true,
    "declaration": true,
    "importHelpers": true
  },
  "include": ["lib/*.ts"],
  "exclude": ["node_modules", "dist"]
}
